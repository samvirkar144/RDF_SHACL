<% include ./partials/header %>
<!-- <% include ./partials/errorMsg %> -->

  <div class="container mt-5">
    <div class="row">
      <div class="col"></div>
      <div class="col-sm-7 col-md-6 col-lg-5 ">
        <div class="card shadow border-0">
          <div class="card-body">
            <h1 class="text-center">Sign Up</h1>
            <p>
              <small class="text-muted">Fields marked * are required.</small>
            </p>
            <form class="needs-validation" action="/register" enctype="multipart/form-data" method="POST" novalidate>
              <div class="form-group">
                <label for="">Name*</label>
                <input type="text" name="fullName" class="form-control" id="fullName" placeholder="John Smith" required>
                <div class="invalid-feedback">
                  Please enter your name.
                </div>
              </div>
              <div class="form-group">
                <label for="">Description*</label>
                <input type="text" name="email" class="form-control" id="email" placeholder="john@smith.com" required>
                <div class="invalid-feedback">
                  Please provide description
                </div>
              </div>
              <div class="form-group">
                <label for="">start Date</label>
                <input type="text" name="phone" class="form-control" id="phone" placeholder= new Date()>
              </div>
              <div class="form-group">
                <label for="">location*</label>
                <input type="text" name="username" class="form-control" id="exampleInputUsername" placeholder="Mumbai" required>
                <div class="invalid-feedback">
                  Please choose a Location.
                </div>
              </div>
              
              <button type="submit" class="btn btn-danger btn-block">Submit</button>
            </form>
            <div class="mt-2 text-center">
              Back to Home
              <a href="/login">Home</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col"> </div>
    </div>
  </div>

  <% include ./partials/footer %>